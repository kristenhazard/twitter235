<h3>twitter feeds</h3>

<table class="users-table">
  <tr>
    <th>GO TO</th>
    <th>twitter screen name</th>
    <th>twitter token</th>
    <th>twitter secret</th>
    <th>connect to twitter</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @twitter_feeds.each do |twf| %>
  <tr>
    <td><%= link_to 'FEED', twf %></td> 
    <td><%=h twf.tw_screen_name %></td>
    <td><%=h truncate(twf.tw_token, :length => 10) %></td>
    <td><%=h truncate(twf.tw_secret, :length => 10) %></td>
    <td><%= link_to image_tag("/images/twitter_connect.png"), authorize_twitter_feed_path(twf) %></td>
    <td><%= link_to 'Show', twf %></td>
    <td><%= link_to 'Edit', edit_twitter_feed_path(twf) %></td>
    <td><%= link_to 'Destroy', twf, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Twitter Feed', new_twitter_feed_path %>